.loginTitle {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.select {
  font-size: 12px;
  color: black;
  width: 33%;
  text-align: center;
  height: 45px;
  line-height: 45px;
  border-bottom: 5rpx solid green;
}

.default {
  font-size: 12px;
  margin: 0 auto;
  padding: 15px;
}

.hr {
  border: 1px solid #ccc;
  opacity: 0.2;
}

.item-box {
  width: 700rpx;
  margin: 0 auto;
  padding: 20rpx 0;
}
 
.items {
  width: 100%;
}
 
.item {
  position: relative;
  border-top: 2rpx solid #eee;
  height: 115rpx;
  line-height: 115rpx;
  overflow: hidden;
}
 
.inner.txt {
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding: 0 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
 
.item-icon {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
  margin-right: 16rpx;
  margin-left: 13px;
  border-radius: 50%;
}
 
.item-data {
  float: right;
  margin-right: 5%;
}
 
.rankpace {
  color: #fa7e04;
}
 
.inner.del {
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff;
}
 
view {
  box-sizing: border-box;
}
 
.item:last-child {
  border-bottom: 2rpx solid #eee;
}
 
.inner {
  position: absolute;
  top: 0;
}

.center{
  text-align: center;
  margin: 0 auto;
  width: 100%;
}